<h2> <%= @note.title %></h2>
<p><strong>Category:</strong> <%= @note.category %></p>

<p><strong>Description:</strong> <%= @note.description %></p>

<p><strong>Due Date:</strong> <%= @note.due_date %></p>

<% if @note.photos.attached? %>
  <p><strong>Photo:</strong></p>
  <div>
    <% @note.photos.each do |photo| %>
      <%= image_tag photo %>
    <% end %>
  </div>
<% end %>
<%= link_to 'Edit', edit_note_path(@note), class: 'btn btn-primary' %> 
<%= link_to 'Back', notes_path, class: 'btn btn-primary' %>
<%= link_to "Delete", note_path(@note), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this note?"}, class: 'btn btn-danger' %>