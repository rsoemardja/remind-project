
<h2><strong>Title:</strong> <%= @task.title %></h2>
<p><strong>Category:</strong> <%= @task.category %></p>

<p><strong>Description:</strong> <%= @task.description %></p>

<p><strong>Due Date:</strong> <%= @task.due_date %></p>

<% if @task.photos.attached? %>
  <p><strong>Photo:</strong></p>
  <div>
    <% @task.photos.each do |photo| %>
      <%= image_tag photo %>
    <% end %>
  </div>
<% end %>
<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %> 
<%= link_to 'Back', tasks_path, class: 'btn btn-primary' %>
<%= link_to "Delete", destroy_task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this task?"}, class: 'btn btn-danger' %>