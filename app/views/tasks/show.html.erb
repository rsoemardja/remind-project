
<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <div class="card-trip">
        <% if @task.photos.attached? %>
        <div>
          <% @task.photos.each do |photo| %>
            <%= image_tag photo %>
          <% end %>
        </div>
        <% end %>

        <div class="card-trip-infos">
          <div>
          <h2> <%= @task.title %></h2>
            <p><strong>Category:</strong> <%= @task.category %></p>
            <p><strong>Description:</strong> <%= @task.description %></p>
            <p><strong>Due Date:</strong> <%= @task.due_date %></p>
          </div>
        </div>
        <div class="p-3 text-center">
          <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %> 
          <%= link_to 'Back', tasks_path, class: 'btn btn-primary' %>
          <%= link_to "Delete", destroy_note_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this note?"}, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>

