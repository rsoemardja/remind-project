<h3>All Tasks</h3>
<% @tasks.each do |task| %>
  <div class="card-product">
    <% task.photos.each do |photo| %>
      <div class="card-product-image">
        <%= cl_image_tag(photo.key, height: 300, width: 400, crop: :fill) %>
      </div>
    <% end %>
    <div class="card-product-infos">
      <h2><%= task.title %></h2>
      <p><%= task.description %></p>
      <td>
      <div class="pull-right">
        <%= link_to 'Details', task_path(task), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %>
        <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% deadline = task.due_date.strftime("%Y-%m-%dT%H:%M:%SZ") %>
        <div data-controller="timer">
          <div class="d-none" data-timer-target="deadline"><%= deadline %></div>
          <span class="hours" data-timer-target="hours"></span>:<span class="minutes" data-timer-target="minutes"></span>
        </div>
        <% content_for :scripts do %>
          <%= javascript_tag do %>
            initialize_timer("<%= deadline %>");
          <% end %>
        <% end %>
      </div>
      </td>
    </div>
  </div>
<% end %>

<%= link_to 'New Task', new_task_path(@user), class: 'btn btn-success' %>
