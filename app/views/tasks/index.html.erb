<h3>All Tasks</h3>
<% @tasks.each do |task| %>
  <div class="card-product">
    <% task.photos.each do |photo| %>
      <div class="card-product-image">
        <%= cl_image_tag(photo.key, height: 300, width: 400, crop: :fill) %>
      </div>
    <% end %>
    <div class="card-product-infos">
      <h2><%= task.title %></h2>
      <p><%= task.description %></p>
        <td>
        <br>
          <%= link_to task_path(task), class: 'btn btn-primary' do %>
            <i class="fas fa-info-circle"></i> <!-- Replace 'Detail' text with an icon -->
            <% end %>
            <%= link_to edit_task_path(task), class: 'btn btn-primary' do %>
              <i class="fas fa-edit"></i> <!-- Replace 'Edit' text with an icon -->
            <% end %>
            <%= link_to new_task_path(@user), class: 'btn btn-success' do %>
              <i class="fas fa-plus-circle"></i> <!-- Replace 'New Note' text with an icon -->
            <% end %>
            <%= link_to destroy_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <i class="fas fa-trash-alt"></i> <!-- Replace 'Delete' text with an icon -->
            <% end %>
        </td>
      </div>
      </td>
    </div>
  </div>
<% end %>

<%= link_to 'New Task', new_task_path(@user), class: 'btn btn-success' %>
