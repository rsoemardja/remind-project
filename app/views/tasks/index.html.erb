<h3>All Tasks</h3>
<table>
  <thead>
    <tr>
      <th>RE:mind MyTasks</th>
    </tr>
  </thead>
  <tbody>
   <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= link_to 'Detail', task, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %>
          <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
