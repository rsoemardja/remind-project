<h3>All Tasks</h3>

<% @tasks.each do |task| %>
  <div class="card-product">
    <% task.photos.each do |photo| %>
      <div class="card-product-image">
        <%= cl_image_tag(photo.key, height: 300, width: 400, crop: :fill) %>
      </div>
    <% end %>
    <div class="card-product-infos">
      <h2><%= task.title %></h2>
      <p><%= task.description %></p>
        <td>
          <%= link_to 'Detail', task_path(task), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %>
          <%= link_to 'Delete', destroy_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
    </div>
  </div>
<% end %>
 <%= link_to 'New Note', new_task_path(@user), class: 'btn btn-success' %>
