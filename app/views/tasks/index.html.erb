<h3>All Tasks</h3>
<%= link_to new_task_path(@user), class: 'btn btn-success' do %>
  <i class="fas fa-plus-circle"></i>
<% end %>
<div class="task-grid">
<% @tasks.each do |task| %>
  <div class="card-product">
    <% task.photos.each do |photo| %>
      <div class="card-product-image">
        <%= cl_image_tag(photo.key, height: 300, width: 400, crop: :fill) %>
        <%= link_to delete_photo_task_path(task, photo_id: photo.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    <% end %>

    <div class="card-product-infos">
      <div class="row">
        <div class="col-md-8">
          <h2><%= task.title %></h2>
          <p><%= task.description %></p>
        </div>
        <div class="col-md-4">
          <div data-controller="">
            <div class="d-none" data-timer-target="deadline"><%= task.due_date %></div>
            <span class="hours" data-timer-target="hours"><%= task.hours_remaining %></span>:<span class="minutes" data-timer-target="minutes"><%= task.minutes_remaining %></span>
          </div>
          <br><div class="d-flex">
          <%= link_to task_path(task), class: 'btn btn-primary' do %>
            <i class="fas fa-info-circle"></i>
          <% end %>
          <%= link_to edit_task_path(task), class: 'btn btn-primary' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to destroy_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
<%= link_to 'New Task', new_task_path(@user), class: 'btn btn-success' %>
<style>
.task-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 16px;
}
</style>
